  <script>
 
   var sum =0;
   var ave =0;
   var number =window.prompt("학생 수 입력:");
      var i=parseFloat(number);       
        while(i>0)
        {
        i--;
        var score =window.prompt("점수 입력:");
        score=parseFloat(score);
        sum = sum+score;
        }
      ave = sum/number;
      document.write(ave,"");
        
